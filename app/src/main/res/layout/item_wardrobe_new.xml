<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/size5"
        android:layout_marginTop="@dimen/size5"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPic1"
            android:layout_width="0dp"
            android:layout_height="@dimen/size118"
            android:scaleType="fitXY"
            android:src="@drawable/img_place_holder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideLineVertical"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeStyle10Percent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"

            app:layout_constraintBottom_toBottomOf="@id/ivPic1"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintTop_toTopOf="@id/ivPic1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineVertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="@id/ivPic1"
            app:layout_constraintGuide_percent="0.6"
            app:layout_constraintTop_toTopOf="@id/ivPic1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPic2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/size2"
            android:scaleType="fitXY"
            android:src="@drawable/img_place_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideLine"
            app:layout_constraintStart_toEndOf="@id/guideLineVertical"

            android:layout_marginBottom="@dimen/size1"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeStyle10Percent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPic3"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:scaleType="fitXY"
            android:src="@drawable/img_place_holder"
            android:layout_marginTop="@dimen/size1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivPic2"
            app:layout_constraintEnd_toEndOf="@id/ivPic2"
            app:layout_constraintTop_toBottomOf="@id/guideLine"
            app:shapeAppearanceOverlay="@style/ShapeStyle10Percent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>