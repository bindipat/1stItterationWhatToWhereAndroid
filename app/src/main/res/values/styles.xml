<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlinedBoxStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size5</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintEnabled">false</item>
        <item name="startIconTint">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size5</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size5</item>
        <item name="boxCornerRadiusTopStart">@dimen/size5</item>
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:colorActivatedHighlight">@color/black</item>
        <item name="android:layout_marginTop">@dimen/size5</item>
        <item name="android:layout_marginBottom">@dimen/size5</item>

    </style>

    <style name="FilledBoxBoxStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="textInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense
        </item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="hintEnabled">false</item>
        <item name="android:colorControlActivated">@color/black</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="android:padding">0dp</item>

        <item name="boxBackgroundColor">@color/grey_hint</item>
        <item name="android:colorActivatedHighlight">@color/black</item>
        <item name="boxCornerRadiusTopStart">@dimen/size7</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size7</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size7</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size7</item>

    </style>

    <style name="FullScreen" parent="Theme.WhatToWhere">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ShapeStyle50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeStyle10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>
    <style name="style1">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>
    <style name="AppTheme.FullScreenDialog" parent="Theme.App.DayNight">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="button" parent="android:TextAppearance">
        <item name="android:paddingStart">@dimen/size20</item>
        <item name="android:paddingEnd">@dimen/size20</item>
        <item name="android:paddingTop">@dimen/size10</item>
        <item name="android:paddingBottom">@dimen/size10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:layout_marginTop">@dimen/size10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tabStyle" parent="android:TextAppearance.Widget.TabWidget">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget</item>
    </style>

    <style name="editText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLength">70</item>
        <item name="android:maxLines">1</item>
        <item name="background">@color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="background_sheet" parent="Theme.WhatToWhere">
        <item name="android:background">@drawable/background_sheet</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/grey_light</item>
        <item name="colorSecondary">@color/color_primary</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColorSecondary">@color/color_primary</item>
    </style>
</resources>
